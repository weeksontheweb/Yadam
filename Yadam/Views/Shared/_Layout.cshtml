        } else {
           $('#exampleModal').modal('hide');
            $('#titleStore').val($('#albumTitleEntry').val());
            $('#descriptionStore').val($('#albumDescriptionEntry').val());
            document.getElementById("dataForm").submit();
        }
    }
</script>
</html>
